}

/**
 * Implements block_view().
 */
function AustCouncilRss_block_view($delta = '') {
  $block = array();
  switch($delta) {
    case 'AustCouncilRss':
      $block['subject'] = t('');
      $block['content'] = array (
        '#markup' => t(AustCouncilRssDisplay()),
      );
    break;
  }
  return $block;
}

