/**
 * sets up the static feed display
 */
function AustCouncilRssDisplay() {
    $url = "http://www.australiacouncil.gov.au/home/RSS";
    $out = '<div style="width:19%;float:left;" id="anatRSS">'.AustCouncilRss_getFeed($url).'</div>';
    return $out;
}

